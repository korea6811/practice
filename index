<!DOCTYPE html>
<html>
<head>
  <title>데이터 저장 웹</title>
  <style>
    table {
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid black;
      padding: 5px;
    }
  </style>
  <script>
    // 데이터를 저장할 배열
    var data = [];

    // 데이터를 입력받고 저장하는 함수
    function saveData() {
      var inputElements = document.getElementsByTagName('input');
      var rowData = [];

      // 입력된 데이터를 배열에 저장
      for (var i = 0; i < inputElements.length; i++) {
        rowData.push(inputElements[i].value);
      }

      // 저장된 데이터를 전체 데이터 배열에 추가
      data.push(rowData);

      // 테이블에 데이터 행 추가
      var table = document.getElementById('data-table');
      var row = table.insertRow(-1);

      // 테이블에 데이터 셀 추가
      for (var i = 0; i < rowData.length; i++) {
        var cell = row.insertCell(i);
        cell.innerHTML = rowData[i];
      }
    }

    // CSV 파일로 데이터 저장
    function saveDataAsCSV() {
      var csvContent = "data:text/csv;charset=utf-8,";

      // 행 이름을 CSV 형식으로 변환하여 추가
      var headerRow = ["행 이름"];
      for (var i = 1; i <= 240; i++) {
        headerRow.push("축전지 " + i + "번 전압");
      }
      csvContent += headerRow.join(",") + "\r\n";

      // 데이터를 CSV 형식으로 변환하여 추가
      data.forEach(function(rowData, index) {
        var row = ["행 " + (index + 1)];
        row = row.concat(rowData);
        csvContent += row.join(",") + "\r\n";
      });

      // CSV 파일 다운로드
      var encodedUri = encodeURI(csvContent);
      var link = document.createElement("a");
      link.setAttribute("href", encodedUri);
      link.setAttribute("download", "data.csv");
      document.body.appendChild(link);
      link.click();
    }

    // 열 제목과 입력 필드 생성
    function createTable() {
      var table = document.getElementById('data-table');

      // 열 제목 행 생성
      var headerRow = table.insertRow(0);
      var inputRow = table.insertRow(1);

      for (var i = 1; i <= 240; i++) {
        // 열 제목 셀 생성
        var headerCell = document.createElement('th');
        headerCell.innerHTML = '축전지 ' + i + '번 전압';
        headerRow.appendChild(headerCell);

        // 입력 필드 셀 생성
        var inputCell = document.createElement('td');
        var inputElement = document.createElement('input');
        inputElement.type = 'number';
        inputElement.placeholder = '축전지 ' + i + '번 전압';
        inputCell.appendChild(inputElement);
        inputRow.appendChild(inputCell);
      }
    }

    // 초기화 함수
    function initialize() {
      createTable();
    }

    // 페이지 로드 시 초기화 함수 실행
    window.onload = initialize;
  </script>
</head>
<body>
  <h1>데이터 저장 웹</h1>
  <table id="data-table"></table>
  <br>
  <button onclick="saveData()">저장</button>
  <button onclick="saveDataAsCSV()">CSV로 저장</button>
</body>
</html>
